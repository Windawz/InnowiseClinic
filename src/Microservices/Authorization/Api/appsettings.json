{
  "AllowedHosts": "*",
  "Auth": {
    "Generation": {
      "AccessTokens": {
        "Issuer": "mydomain.com",
        "Audience": "mydomain.com",
        "ExpirationSeconds": 30
      },
      "RefreshTokens": {
        "ExpirationSeconds": 3600
      }
    },
    "Authentication": {
      "JwtBearer": {
        "ValidIssuer": "mydomain.com",
        "ValidAudience": "mydomain.com",
        "ValidateLifetime": true
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
